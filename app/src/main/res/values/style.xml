<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--For Home Activity-->
    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#0F9D58</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#DB4437</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


    <!--For Activity Goal Fragment-->
    <style name="AlertDialogTheme1" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle1</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle1</item>
    </style>

    <style name="NegativeButtonStyle1" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#DB4437</item>
    </style>

    <style name="PositiveButtonStyle1" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#0F9D58</item>
    </style>


    <!-- Custom Dialog Animation. -->
    <style name="AnimateDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/PauseDialogAnimation</item>
    </style>

    <style name="PauseDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_top</item>
        <item name="android:windowExitAnimation">@anim/anim_fadeout</item>
    </style>

    <style name="Error" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
    </style>



</resources>